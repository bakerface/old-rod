{
  "name": "old-rod",
  "version": "1.0.0",
  "description": "Catch errors in your express routes",
  "main": "index.js",
  "author": "Christopher M. Baker",
  "license": "MIT",
  "homepage": "https://github.com/bakerface/old-rod",
  "keywords": [
    "catch",
    "error",
    "express",
    "middleware",
    "route"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bakerface/old-rod.git"
  },
  "bugs": {
    "url": "https://github.com/bakerface/old-rod/issues"
  },
  "scripts": {
    "pretest": "xo",
    "test": "istanbul cover _mocha",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info"
  },
  "xo": {
    "space": true,
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ],
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "no-unused-vars": [
        "error", {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.1",
    "express": "^4.13.4",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "supertest": "^1.2.0",
    "xo": "^0.16.0"
  }
}
